/**
 * The {{#crossLink "Person"}}{{/crossLink}} class is used to represent a person.
 * @class Person
 */
class Person {
    /**
     * This Person's name.
     * @property {string} name
     */
    public name: string;

    /**
     * @constructor Creates a new instance of a Person
     * @param {string} name The name of the person.
     */
    constructor(name: string){
        this.name = name;
    }

    /**
     * Generates a greeting for this person instance using the {{#crossLink "Person.name"}}{{/crossLink}} member and optional salutation.
     * @method greet
     * @param salutation {string} Optional salutation to use for the person.
     * @returns {string} A greeting for this person.
     */
    public greet(salutation?: string): string {
        return 'Hello, ' + (salutation || '') + ' ' + this.name;
    }
}

export = Person;